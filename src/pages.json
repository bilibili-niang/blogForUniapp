{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^ice-(.*)": "@/components/ice$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/about/index",
      "style": {
        "navigationBarTitleText": "关于此tag",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/read/index",
      "style": {
        "navigationBarTitleText": "阅读",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/addEvents/index",
      "style": {
        "navigationBarTitleText": "今日",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/list/index",
      "style": {
        "navigationBarTitleText": "列表",
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 200
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "mine",
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 200
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#202124",
    "backgroundTextStyle": "dark",
    "color": "#ffffff",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "backgroundColor": "#202124",
    "color": "#ffffff",
    "selectedColor": "#f1c4cd",
    "borderStyle": "black",
    "fontSize": "35",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/addEvents/index",
        "text": "今日"
      },
      {
        "pagePath": "pages/list/index",
        "text": "列表"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的"
      }
    ]
  }
}
